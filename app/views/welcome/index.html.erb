<p id="notice"><%= notice %></p>
<h1>Livres</h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Autor</th>
    <th>Description</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @livres.each do |livre| %>
      <tr>
        <td><%= livre.title %></td>
        <td><%= livre.autor %></td>
        <td><%= livre.description %></td>
        <td><%= livre.category_id %></td>
        <td><%= link_to 'Show', livre, class: 'btn btn-info' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

